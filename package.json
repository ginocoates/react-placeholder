{
  "name": "react-placeholder-img",
  "version": "1.0.0",
  "description": "A react component that renders a placeholder svg image with width and height. Useful for whiteboxing a react application.",
  "main": "lib/index.js",
  "scripts": {
    "build": "npx babel src --out-dir lib",
    "test": "npx jest",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ginocoates/react-placeholder-img.git"
  },
  "keywords": [
    "react",
    "placeholder",
    "image"
  ],
  "author": "Gino Coates",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ginocoates/react-placeholder-img/issues"
  },
  "homepage": "https://github.com/ginocoates/react-placeholder-img#readme",
  "dependencies": {
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.12.1",
    "jest": "^24.7.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-react": "^7.0.0",
    "babel-jest": "^24.7.1",
    "react-test-renderer": "^16.8.6"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/src/testBootstrap.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,mjs}"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{js,jsx,mjs}",
      "<rootDir>/src/**/?(*.)(spec|test).{js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(js|jsx|mjs)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "web.jsx",
      "jsx",
      "node",
      "mjs"
    ]
  }
}
